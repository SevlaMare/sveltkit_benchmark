{
  "endOfLine": "lf",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,

  "trailingComma": "es5",
  "proseWrap": "always",
  "printWidth": 80,

  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "strict",

  "pluginSearchDirs": ["."],
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
